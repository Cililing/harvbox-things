<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintEnd_toStartOf="@+id/container_2"
    app:layout_constraintStart_toStartOf="parent">

    <Button
        android:id="@+id/light_add_trigger"
        android:text="@string/new_trigger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/light_name"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Light1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/light_trigger_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/light_add_trigger"
        android:layout_below="@id/light_name"
        android:padding="8dp" />

</RelativeLayout>